<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.kachanov.farkle.MainActivity">


    <LinearLayout
        android:id="@+id/diceLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dice0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/dice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/banksLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank:"/>

        <TextView
            android:id="@+id/permBankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="visible"
            android:text="0"
            />

        <Button
            android:id="@+id/rollButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="roll"
            android:text="ROLL"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temporary bank:"/>

        <TextView
            android:id="@+id/tempBankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="visible"
            android:text="0"
            />

        <Button
            android:id="@+id/bankButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="bank"
            android:text="Bank"/>
        <TextView
            android:id="@+id/turnNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn #1"
            />
        <TextView
            android:id="@+id/goalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/combinationsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available combinations:"/>

        <Button
            android:id="@+id/comb0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/comb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/comb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/comb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/comb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/comb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="combinationButtonWasClicked"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>
